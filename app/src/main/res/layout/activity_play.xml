<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wordpress.honeymoonbridge.bridgeapp.Activities.PlayActivity">
    <!--OuterLayout-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#038103"
        android:orientation="vertical">


        <!--board-->
        <LinearLayout
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <!--opponentHand-->
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/opponentHand"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="-50dp"/>





                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backside"
                    android:layout_marginRight="0dp"/>




            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
            android:id="@+id/OpponentPlayedCard"
            android:layout_width="wrap_content"
            android:layout_weight="4"
            android:layout_height="0dp"
            android:src="@drawable/backside"
            android:layout_gravity="center"
            />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/YourPlayedCard"
                android:layout_width="wrap_content"
                android:layout_weight="4"
                android:layout_height="0dp"
                android:src="@drawable/backside"
                android:layout_gravity="center"
                />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <!--Your Hand-->
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/yourHand"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clubs_2"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clubs_4"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clubs_9"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ace_of_clubs"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/diamonds_2"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/king_of_diamonds"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/jack_of_spades2"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/queen_of_spades2"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ace_of_spades2"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hearts_5"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/hearts_9"
                    android:layout_marginRight="-50dp"/>

                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/queen_of_hearts2"
                    android:layout_marginRight="-50dp"/>




                <ImageView
                    android:layout_width="0dp"
                    android:onClick="onClick"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:src="@drawable/king_of_hearts2"
                    android:layout_marginRight="0dp"/>








            </LinearLayout>
        </LinearLayout>




    </LinearLayout>

</android.support.constraint.ConstraintLayout>
