<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wordpress.honeymoonbridge.bridgeapp.Fragments.PickCardFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--board-->
    <LinearLayout
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--opponentHand-->
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/opponentHand"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            >


        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">
            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>

            <Button
                android:id="@+id/trump"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â™¥"
                android:background="@drawable/roundedbutton"
                />

            <ImageView
                android:id="@+id/CardHeap"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:src="@drawable/backside"
                android:layout_gravity="center"
                />


            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"/>


        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/firstSecondLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/firstCard"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:src="@drawable/clubs_5"
                android:layout_gravity="center"
                />

            <ImageView
                android:id="@+id/secondCard"
                android:layout_width="match_parent"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:src="@drawable/backside"
                android:layout_gravity="center"
                />

        </LinearLayout>




    </LinearLayout>

</FrameLayout>
