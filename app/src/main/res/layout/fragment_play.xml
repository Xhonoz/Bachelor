<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wordpress.honeymoonbridge.bridgeapp.Fragments.PlayFragment">


    <!--board-->
    <LinearLayout
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--opponentHand-->
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/opponentHand"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        >
        

    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <TextView
        android:id="@+id/contractView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/northTrickView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/southTrickView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/black"/>

</LinearLayout>




    <ImageView
        android:id="@+id/OpponentPlayedCard"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:layout_height="0dp"
        android:layout_gravity="center"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:id="@+id/YourPlayedCard"
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:layout_height="0dp"
        android:layout_gravity="center"
        />

    </LinearLayout>

</FrameLayout>
